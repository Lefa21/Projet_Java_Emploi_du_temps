<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.isep.frattesi.projetjavaedt.controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Identifiant:" />
    <TextField fx:id="identifiantField" promptText="Entrez votre identifiant" />

    <Label text="Mot de passe:" />
    <PasswordField fx:id="motDePasseField" promptText="Entrez votre mot de passe" />

    <Button fx:id="connexionButton" onAction="#seConnecter" text="Connexion" />

    <Label fx:id="messageLabel" style="-fx-text-fill: red;" />
</VBox>